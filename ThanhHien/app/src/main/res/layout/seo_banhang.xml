<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BanHang.Seo_SanPhamDaChon.Seo_BanHang">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#000000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="25"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="23"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewListSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:weightSum="13"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent">
                <Button
                    android:padding="5dp"
                   android:drawableLeft="@drawable/imgtrove"
                    android:layout_weight="3"
                    android:text="Trở về"
                    android:textAllCaps="false"
                    android:id="@+id/btnTrove"
                    android:textColor="#FFFFFF"
                    android:background="#F44336"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></Button>
                <Button
                    android:textSize="12sp"
                    android:layout_weight="10"
                    android:text="Thanh toán: 0 VNĐ"
                    android:textAllCaps="false"
                    android:id="@+id/btnTongTienThanhToan"
                    android:textColor="#FFFFFF"
                    android:background="#03A9F4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></Button>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>