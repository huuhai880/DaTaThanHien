<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/item_boderlogin"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/popup_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center"
            android:paddingTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Tên: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:textColor="#000000"
                    android:gravity="right"
                    android:layout_marginLeft="5dp"
                    android:text="Sắt U"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Số lượng tồn: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:textColor="#000000"
                    android:gravity="right"
                    android:layout_marginLeft="5dp"
                    android:text="60 cây"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/item_boderbottom"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Giá bán: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:gravity="right"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textColor="#F44336"
                    android:text="200,000 VNĐ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:text="Số lượng:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:gravity="center"
                    android:weightSum="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:src="@drawable/imgminus"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    </ImageButton>
                    <EditText
                        android:gravity="center"
                        android:layout_weight="5"
                        android:inputType="number"
                        android:padding="7dp"
                        android:background="@drawable/item_boder"
                        android:text="10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    </EditText>
                    <ImageButton
                        android:src="@drawable/imgplus"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    </ImageButton>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:text="Số lượng nhỏ lẻ (m):"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <RadioGroup
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:text="Có sẵn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </RadioButton>
                    <RadioButton
                        android:layout_marginLeft="40dp"
                        android:text="Lấy mới"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </RadioButton>
                </RadioGroup>
                <TextView
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:text="Số lượng (m):"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <EditText
                    android:textAlignment="textEnd"
                    android:hint="Số lượng (m)"
                    android:inputType="number"
                    android:padding="7dp"
                    android:background="@drawable/item_boder"
                    android:text="6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                </EditText>
                <TextView
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Giá tiền:"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <EditText
                    android:textColor="#F44336"
                    android:gravity="right"
                    android:hint="Giá tiền"
                    android:inputType="number"
                    android:padding="7dp"
                    android:background="@drawable/item_boder"
                    android:text="6000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:text="Tổng mét:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:textColor="#000000"
                    android:gravity="right"
                    android:layout_marginLeft="5dp"
                    android:inputType="number"
                    android:text="66 mét"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:text="Tổng tiền: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:inputType="number"
                    android:text="3,000,000 VNĐ"
                    android:textColor="#4CAF50"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="13dp"
                android:weightSum="13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnThanhToan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="#03A9F4"
                    android:padding="5dp"
                    android:text="Cập nhật"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"></Button>

                <Button
                    android:id="@+id/btnXoaSanPham"
                    android:padding="5dp"
                    android:drawableRight="@drawable/imgdelete"
                    android:background="#F44336"
                    android:layout_weight="3"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:text="Xóa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                </Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingRight="20dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnclosedialog"
            android:src="@drawable/imgclose"
            android:layout_width="35dp"
            android:layout_height="35dp">
        </ImageView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>