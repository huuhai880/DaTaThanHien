<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/item_borderquanly"
    android:layout_height="wrap_content">
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#3A3A3A"
                    android:id="@+id/txtTenSanPham"
                    android:textSize="18dp"
                    android:layout_toLeftOf="@+id/ivXoa"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Laptop lenovo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
                <ImageView
                    android:id="@+id/ivXoa"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/imgdeletesanpham"
                    android:layout_width="25dp"
                    android:layout_height="25dp"></ImageView>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="5dp"
                    android:id="@+id/txtGiaSanPham"
                    android:textSize="17dp"
                    android:textColor="#F44336"
                    android:text="16.000.000 Ä‘"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tvCapNhat"
                    android:textSize="15dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/ibGiam"
                        android:background="#f2f2f2"
                        android:src="@drawable/ic_remove_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"></ImageButton>
                    <EditText
                        android:inputType="number"
                        android:focusable="false"
                        android:id="@+id/editSoLuong"
                        android:gravity="center"
                        android:text="1"
                        android:background="#fcfcfc"
                        android:layout_width="60dp"
                        android:layout_height="40dp"></EditText>
                    <ImageButton
                        android:id="@+id/ibTang"
                        android:background="#f2f2f2"
                        android:src="@drawable/ic_add_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"></ImageButton>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>