<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/item_borderquanly"
    android:padding="7dp"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:id="@+id/expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/header"
                android:orientation="vertical">
                <TextView
                    android:textSize="20sp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/imgtenkhachhang"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:id="@+id/txtNhaCungCap"
                    android:textStyle="bold"
                    android:text="Tôn hoa sen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:textSize="16sp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/imgphone"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:id="@+id/txtSoDienThoai"
                    android:text="0346508758"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/imglocation"
                    android:drawablePadding="5dp"
                    android:text="268a, Nguyên Công Trứ,TP.Buôn Mê Thuột"
                    android:textColor="#000000"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>