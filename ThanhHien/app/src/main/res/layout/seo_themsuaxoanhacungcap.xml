<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NhaCungcap.Seo_ThemSuaXoaNhaCungCap">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#000000" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/popup_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:text="Mã nhà cung cấp:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:inputType="text"
                android:enabled="false"
                android:hint="Tăng tự động"
                android:id="@+id/edit_GhiChu"
                android:padding="10dp"
                android:background="@drawable/item_boder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:text="Tên nhà cung cấp:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:inputType="text"
                android:hint="Tên nhà cung cấp"
                android:id="@+id/edit_TenNhaCungCap"
                android:padding="10dp"
                android:background="@drawable/item_boder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:text="Số điện thoại:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:inputType="phone"
                android:hint="Số điện thoại"
                android:id="@+id/edit_SoDienThoai"
                android:padding="10dp"
                android:background="@drawable/item_boder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:text="Địa chỉ:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:inputType="text"
                android:hint="Địa chỉ"
                android:id="@+id/edit_DiaChi"
                android:padding="10dp"
                android:background="@drawable/item_boder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:text="Email:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:inputType="text"
                android:hint="Email"
                android:id="@+id/edit_Email"
                android:padding="10dp"
                android:background="@drawable/item_boder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnThemNhaCungCap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/item_button"
                android:text="Thêm nhà cung cấp"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"></Button>
            <Button
                android:id="@+id/btnSuaNhaCungCap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/item_button"
                android:text="Sửa nhà cung cấp"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>