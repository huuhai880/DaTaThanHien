<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgNhapXuat"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/imglichsunhaphang"
        android:layout_width="50dp"
        android:layout_height="50dp">
    </ImageView>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtNgayNhapXuat"
            android:layout_marginBottom="5dp"
            android:text="2020-01-09 12:14:56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTenSanPham"
                android:textStyle="bold"
                android:text="Sắt u 20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
           <LinearLayout
               android:gravity="right"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/txtSoLuong"
                   android:textColor="#F44336"
                   android:text="30"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
               </TextView>
               <TextView
                   android:id="@+id/txtDonViTinh"
                   android:layout_marginLeft="5dp"
                   android:text="Cây"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

               </TextView>
           </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>