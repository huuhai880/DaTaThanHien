<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/item_boderbottom"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingBottom="5dp"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:background="@drawable/item_boderbottom"
                android:text="Thông tin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/txtIDPhieuNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="PN-202022544854844"
            android:textSize="17sp"
            android:textStyle="bold"></TextView>

        <LinearLayout

            android:paddingBottom="5dp"
            android:background="@drawable/item_boderbottom"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Nhà cung cấp:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/txtTenNhaCungCap"
                android:gravity="right"
                android:layout_marginLeft="5dp"
                android:text="Tôn hoa sen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="5dp"
            android:background="@drawable/item_boderbottom"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Ngày tạo:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/txtNgayTao"
                android:gravity="right"
                android:layout_marginLeft="5dp"
                android:text="2020-12-05 15:20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="5dp"
            android:background="@drawable/item_boderbottom"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Tạo bởi:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:gravity="right"
                android:layout_marginLeft="5dp"
                android:text="Phần mềm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:paddingBottom="5dp"
            android:background="@drawable/item_boderbottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Ghí chú:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/txtGhiChu"
                android:gravity="right"
                android:layout_marginLeft="5dp"
                android:text="Thử nghiệm app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:paddingBottom="5dp"
            android:background="@drawable/item_boderbottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Tổng tiền:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/txtTongTien"
                android:textColor="#F44336"
                android:gravity="right"
                android:layout_marginLeft="5dp"
                android:text="30,0000 VNĐ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:paddingBottom="5dp"
            android:background="@drawable/item_boderbottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Nợ:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/txtNo"
                android:textColor="#FFC107"
                android:gravity="right"
                android:layout_marginLeft="5dp"
                android:text="0 VNĐ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>


    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_gravity="bottom"
                android:weightSum="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="#FFC107"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawablePadding="15dp"
                        android:drawableLeft="@drawable/imgprint"
                        android:textColor="#FFFFFF"
                        android:text="In"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:background="#03A9F4"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawablePadding="15dp"
                        android:drawableLeft="@drawable/imgcapnhat"
                        android:textColor="#FFFFFF"
                        android:text="Cập nhật"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:background="#F44336"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawablePadding="15dp"
                        android:drawableLeft="@drawable/imgdelete"
                        android:textColor="#FFFFFF"
                        android:text="Xóa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>